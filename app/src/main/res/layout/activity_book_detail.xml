<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.BookDetailActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
    android:src="@drawable/logo"
        android:layout_marginLeft="70dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">

</ImageView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="8dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tên Sách"
    android:textColor="#000"
    android:textStyle="bold"
    android:textSize="20dp"/>
        <EditText
            android:id="@+id/edTenSach_CT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Sách" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số Lượng"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edSoLuong_CT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số Lượng" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gía Bán"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edGiaBan_CT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá Bán" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAddBook_CT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="updateBook"
                android:text="Cập nhật"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/btnCancelBook_CT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy"
                android:onClick="huysach"
                tools:ignore="OnClick" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>